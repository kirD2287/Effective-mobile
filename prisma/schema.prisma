generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Shop {
  id    Int    @id @default(autoincrement())
  name  String
  stocks Stock[]

  ActionHistory ActionHistory[]
}

model Product {
  id    Int    @id @default(autoincrement())
  plu   String @unique
  name  String
  stocks Stock[]

  ActionHistory ActionHistory[]
}

model Stock {
  id          Int     @id @default(autoincrement())
  quantityOnShelf Int
  quantityInOrder Int
  shopId      Int
  productId   Int
  shop        Shop    @relation(fields: [shopId], references: [id])
  product     Product @relation(fields: [productId], references: [id])
}

model ActionHistory {
  id        Int      @id @default(autoincrement())
  action    String
  shopId    Int
  productId Int
  date      DateTime @default(now())
  shop      Shop     @relation(fields: [shopId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
}
